#include <iostream>
#include<cmath>
using namespace std;
// int length = sizeof(bin[])/sizeof(bin[0]);
int main(){
    int j,rem[100],i=0;
    cout<<"Please Enter your Number : ";
    cin>>j;
    int length=floor(log10(j)+1);
    while(j!=0){
        rem[i]=j%2;
        i++;
        j=j/2;        
    }
    i--;
    cout<<"Number of Digits in Input Number : "<<length<<endl;
    cout<<"Binary Transform of input : ";
    for (int k=i;k>=0;k--){
        cout<<rem[k];
    }
    return 0;
}
